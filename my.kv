<JournalWindow>:
    name: "journal"
    entry: entry

    FloatLayout:
        Image:
            source: 'notebook.png' 
            size: self.size
            pos: self.pos
            allow_stretch: True
            keep_ratio: False

        Label:
            text: root.feeling_label_text
            size_hint: (0.2, 0.5)
            text_size: self.width, None
            halign: 'center'
            valign: 'middle'
            multiline: True
            color: 0.4, 0.2, 0.1, 1
            font_name: 'contentfont3'
            font_size: '20sp'
            pos_hint: {'center_x': 0.33, 'center_y': 0.55}
        
        TextInput:
            id: entry
            hint_text: "start writing..."
            text_color: 0.4, 0.2, 0.1, 1
            multiline: True
            font_name: 'contentfont3'
            font_size: '15sp'
            size_hint: (0.2, 0.5)
            pos_hint: {'center_x': 0.65, 'center_y': 0.5}
            background_color: 0,0,0,0
        
        # Label:
        #     text: "Don't know what to write about?"

        # GridLayout:
