        #         text: "Generate new prompt"
        #         on_press:
        #             root.new_prompt()

        #     Label:
        #         id: prompt
        #         text: ""
        #         text_size: self.size
        #         valign: "middle"
        #         halign: "center"

        # GridLayout:
        #     cols: 2

        Button:
            text: "Back"
            font_name: 'contentfont3'
            font_size: '20sp'
            color: 1, 1, 0.8, 1
            background_color: 1, 0.5, 0.259,1
            size_hint: (0.125, 0.1)
            pos_hint: {'center_x': 0.35, 'center_y': 0.2}
            on_press:
                app.root.current = "main"
                root.manager.transition.direction = "right"

        Button:
            text: "Ask"
            
            font_name: 'contentfont3'
            font_size: '20sp'
            color: 1, 1, 0.8, 1
            background_color: 1, 0.5, 0.259,1
            size_hint: (0.125, 0.1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.2}
            on_press:
                root.ask_btn_press()

        Button:
            text: "Finish"
            font_name: 'contentfont3'
            font_size: '20sp'
            color: 1, 1, 0.8, 1
            background_color: 1, 0.5, 0.259,1
            size_hint: (0.125, 0.1)
            pos_hint: {'center_x': 0.65, 'center_y': 0.2}
            on_press:
                root.save_btn_press()
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"

<HistoryWindow>:
    name: "history"
    entries: entries

    FloatLayout:
        Image:
            source: 'garden background.png' 
            size: self.size
            pos: self.pos
            allow_stretch: True
            keep_ratio: False
    
        Button:
            text: "Display/Update Entries"
            font_name: 'font'
            font_size: '25sp'
            size_hint: (0.5, 0.1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.85}
            on_press:
                root.addLabels()
                # root.show_btn_press()

        MDScrollView:
            size_hint: (0.5, 0.5)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            MDList:
                id: entries

        Button:
            text: "Back"
            font_name: 'font'
            font_size: '30sp'
            size_hint: (0.2, 0.1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.15}
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"


<NegativityPebbleApp>:
    name: "negativitypebble"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'pondd.webp'
    FloatLayout:
        Image:
            source: 'pondd.webp'
            allow_stretch: True
            keep_ratio: False
            size_hint: 1,1
        
        Label:
            id: heading
            text: 'Negativity Pebble'
            font_size: 63
            font_name: 'contentfont3.ttf'
            pos_hint: {'center_x': 0.5, 'center_y': 0.8}
            color: 0.4, 0.2, 0.1, 1
        
        Label:
            id: message
            text: 'Your negative thought has been thrown into the pond!'
            text_size: self.width, None
            font_size: 25
            size_hint_y: None
            font_name: 'titlefont2.ttf'
            pos_hint: {'center_x': 0.5, 'center_y':0.5}
            color: 0.4, 0.2, 0.1, 1
            halign:'center'
            opacity: 0

        Image:
            id: pebble
            source: 'chomp.png'
            size_hint: 0.3, 0.5
            pos_hint: {'center_x':.5, 'center_y':.5}
            opacity: 1 
            allow_stretch: True
            keep_ratio: False
        Image:
            id: chew
            source: 'chew.png'
            size_hint: 0.3, 0.5
            pos_hint: {'center_x':.5, 'center_y':.5}
            opacity: 0 
            allow_stretch: True
            keep_ratio: False

        TextInput:
            id: negative_message
            hint_text: "Write down a negative thought"
            size_hint: 0.2, 0.1
            pos_hint: {'center_x':.5, 'center_y':.46}
            multiline: False
            font_size: 15
            font_name: 'contentfont3.ttf'
            background_color: 0,0,0,0
    
        Button:
            id: throw_button
            text: 'throw!'
            font_name: 'contentfont3.ttf'
            on_press: root.throw_action()
            on_release: root.add_points()
            size_hint: 0.2, 0.1
            pos_hint: {'center_x':.5, 'center_y':.2}
            # pos: 400, 80
            color: 1, 1, 0.8, 1
            background_color: 1, 0.5, 0.259,1

        Button:
            text: "Back"
            font_name: 'contentfont3.ttf'
            color: 1, 1, 0.8, 1
            background_color: 1, 0.5, 0.259,1
            pos_hint: {'center_x':0.95, 'center_y':0.95}
            size_hint: 0.1, 0.1
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"


<P>:
    Label:
        text: "You are about to delete an entry! Click elsewhere to dismiss."
        size_hint: 0.6, 0.2
        pos_hint: {"x":0.2, "top":1}

    Button:
        text: "Confirm"
        size_hint: 0.8, 0.2
        pos_hint: {"x":0.1, "y":0.1}
        on_release: root.delete_entry()